{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/*"
  ],
  "typeRoots": ["node_modules/@types"],
  "exclude": [
    "node_modules"
  ]
}
